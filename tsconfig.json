{
  "extends": "@vue/tsconfig/tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "baseUrl": "./",
    // import的时候 找不到模块 @/xxx 或其相应的类型声明
    "paths": {
      "@/*": [
        "src/*"
      ],
    },
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "@dcloudio/types",
      "@types/uni-app",
      "@types/node",
    ],
    "ignoreDeprecations": "5.0",
    "strictPropertyInitialization": false,
    // 可以在 ts 中引入js文件 & 不报错
    "allowJs": true,
    "outDir": "dist",
  },
  // 指定要编译的路径列表
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/**/*.d.ts",
    "types/**/*.ts",
    "vite.config.ts"
  ],
  // 指定编译器 要排除的、不编译的文件
  "exclude": [
    "node_modules",
    "dist"
  ],
}